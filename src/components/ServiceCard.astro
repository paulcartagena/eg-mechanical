---
interface Props {
  icon: string;
  title: string;
  content: string;
  background: string;
  gradient: string;
  pills?: string[]; 
}

const { icon, title, content, background, gradient, pills = [] } = Astro.props; // Default a empty arrau
---

<div class="flex flex-col mt-4 sm:mt-4 rounded">
  <div class={`size-16 lg:size-15 rounded-full p-[3px] mb-5 ${gradient}`}>
    <div
      class={`flex items-center justify-center size-full ${background} opacity-80 text-white rounded-full`}
    >
      <img src={icon} alt={title} class="w-7 h-7 object-contain" />
    </div>
  </div>
  <h3 class="text-xl font-bold mb-2">{title}</h3>
  <p class="text-gray-300">{content}</p>

  <div
    class="mt-8 grid grid-cols-[repeat(auto-fit,_minmax(8rem,_max-content))] gap-4 mb-4"
  >
    {
      pills.map((pill) => (
        <span class="bg-indigo-500 text-white px-4 py-2 rounded-full text-sm font-medium whitespace-nowrap text-center">
          {pill}
        </span>
      ))
    }
  </div>
</div>
